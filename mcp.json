{
  "name": "wp-mcp-adapter-demo",
  "version": "0.1.0",
  "description": "Minimal MCP adapter demo exposing WordPress data via REST.",
  "endpoints": {
    "capabilities": "/wp-json/mcp/v1/capabilities",
    "tool": "/wp-json/mcp/v1/tool"
  },
  "tools": [
    {
      "name": "echo",
      "description": "Echo back the provided text.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          }
        },
        "required": ["text"]
      }
    },
    {
      "name": "list_posts",
      "description": "List recent published posts.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "limit": {
            "type": "integer"
          }
        }
      }
    },
    {
      "name": "get_post",
      "description": "Fetch a post by ID.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          }
        },
        "required": ["id"]
      }
    }
  ]
}
